<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="owl_description">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import owl_description urdf file -->
    <xacro:include filename="$(find owl_description)/urdf/robot.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="owl_description.ros2_control.xacro" />


    <xacro:owl_description_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
